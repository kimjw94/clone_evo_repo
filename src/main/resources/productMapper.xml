<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.evo.product.ProductMapper">

	<!-- categoryName -->
	<select id="categoryList" resultType="map">
		select * from evo_category
	</select>
	
	<!-- detailCategoryName -->
	<select id="detailCateList" parameterType="_int" resultType="map">
		select p_category_code, p_category_detail_name  
		  from evo_category_detail
		 where p_category_code = (
		 						select p_category_code
		 						  from evo_category
		 						 where p_category_code = #{p_category_code}
		 						)
	</select>
</mapper>